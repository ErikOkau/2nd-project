{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "/*" : ["./public/*"]
    },
    "ignoreDeprecations": "5.0",
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
